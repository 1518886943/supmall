{
    "compilerOptions": {
        "target": "ES6",
        "baseUrl": "./",
        "paths": {
            "components/*": ["src/components/*"],
            "common/*": ["src/common/*"],
            "assets/*": ["src/assets/*"],
            "network/*": ["src/network/*"],
            "views/*": ["src/views/*"],
            "@/*": ["src/*"]
        }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*"]
}
